<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <!--We need here a nested FrameLayout, because the debug view can also be placed here: -->
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"


            android:id="@+id/container_layout">
            <at.ac.tuwien.caa.docscan.PaintView
                android:id="@+id/paint_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/abc_screen_simple" />
            <at.ac.tuwien.caa.docscan.CameraPreview
                android:id="@+id/camera_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:background="@color/photo_button_view_bg_color">

            <ImageButton
                android:layout_centerInParent="true"
                android:id="@+id/photo_button"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_photo_camera"
                android:background="@drawable/photo_shoot_button_selector"
                />


            <ImageButton
                android:id="@+id/gallery_button"
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="@dimen/activity_horizontal_margin"
                />

        </RelativeLayout>

    </LinearLayout>

    <!-- The navigation drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_marginRight="-100dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/navigation_drawer_bg_color"
        app:menu="@menu/drawer_view_menu"
        app:itemTextColor="@color/navigation_drawer_text_color"
        />






</android.support.v4.widget.DrawerLayout>