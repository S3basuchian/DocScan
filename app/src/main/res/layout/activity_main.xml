<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- The main content view START -->
    <at.ac.tuwien.caa.docscan.OverlayView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overlay_view"
        >
        <at.ac.tuwien.caa.docscan.DrawView
            android:id="@+id/draw_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <at.ac.tuwien.caa.docscan.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </at.ac.tuwien.caa.docscan.OverlayView>
    <!-- The main content view END -->

    <!-- The navigation drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_marginRight="-100dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/navigation_drawer_bg_color"
        app:menu="@menu/drawer_view"
        app:itemTextColor="@color/navigation_drawer_text_color"
        />


</android.support.v4.widget.DrawerLayout>