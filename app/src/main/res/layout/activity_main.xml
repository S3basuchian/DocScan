<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--We need here a nested FrameLayout, because the debug view can also be placed here: -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_layout">
        <!-- The main content view is contained in a Fragment: -->
        <fragment
            android:name="at.ac.tuwien.caa.docscan.OverlayViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/overlay_view"
            >
        </fragment>

    </FrameLayout>

    <!--
    <fragment
        android:name="at.ac.tuwien.caa.docscan.DebugViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/debug_view"
        >
    </fragment>
    -->


    <!-- The navigation drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_marginRight="-100dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/navigation_drawer_bg_color"
        app:menu="@menu/drawer_view_menu"
        app:itemTextColor="@color/navigation_drawer_text_color"
        />


</android.support.v4.widget.DrawerLayout>